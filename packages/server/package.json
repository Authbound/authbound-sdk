{
  "name": "@authbound/server",
  "version": "0.1.0",
  "description": "Authbound server SDK: middleware, API handlers, and JWT utilities for identity/age verification.",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "author": "Authbound",
  "homepage": "https://github.com/authbound/sdk",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/authbound/sdk.git",
    "directory": "packages/server"
  },
  "bugs": {
    "url": "https://github.com/authbound/sdk/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./next": {
      "types": "./dist/next/index.d.ts",
      "import": "./dist/next/index.js",
      "require": "./dist/next/index.cjs"
    },
    "./edge": {
      "types": "./dist/edge.d.ts",
      "import": "./dist/edge.js"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@authbound/core": "workspace:*",
    "@authbound/shared": "workspace:*",
    "jose": "^5.10.0"
  },
  "peerDependencies": {
    "next": ">=14.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@authbound/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "next": "^15.5.9",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "zod": "catalog:"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "ultracite lint",
    "format": "ultracite format"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
